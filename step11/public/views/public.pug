head
  title public
body
  if username
    p Hello #{username}
    .newThread
      a(href="/thread/new") start a new thread
    .myPosts
      a(href="/thread/my") my posts
    .logout
      a(href="/user/logout") logout
  else
    p You need to log in or register
    .login
      a(href="/user/login") login
    .register
      a(href="/user/register") register
  table
    tr
      th Title
      th Created By
      th Updated Time
    each thread in threads
      tr
        td
          a(href="/thread/" + thread._id) #{thread.title}
        td #{thread.author}
        td #{thread.timeUpdated}
